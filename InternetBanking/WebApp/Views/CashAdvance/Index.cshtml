@using InternetBanking.Core.Application.ViewModels.PayCard
@using InternetBanking.Core.Application.ViewModels.Card;
@using InternetBanking.Core.Application.ViewModels.BankAccount;
@model CashAdvanceViewModel

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <form method="post" enctype="multipart/form-data" asp-controller="CashAdvance" asp-action="Index">

                                <h2 class="fw-bold mb-2 text-uppercase">Pago a tarjeta</h2>

                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                @if (ViewBag.Error != null)
                                {
                                    <span class="text-danger">@ViewBag.Error</span>
                                }
                                <div class="form-outline form-white mb-4">
                                    <label asp-for="IdCard" class="form-label">Cuenta origen</label>
                                    <select asp-for="IdCard">
                                        <option disabled>Selecciona la tarjeta</option>
                                        @foreach (CardViewModel card in ViewBag.cards)
                                        {
                                            <option value="@card.Id">
                                                @card.Id
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="IdCard" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label asp-for="CodeAccount" class="form-label">Cuenta origen</label>
                                    <select asp-for="CodeAccount">
                                        <option disabled>Selecciona una cuenta</option>
                                        @foreach (BankAccountViewModel banks in ViewBag.banks)
                                        {
                                            <option value="@banks.Code">
                                                @banks.Code
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="CodeAccount" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Amount" class="form-control form-control-lg" />
                                    <label asp-for="Amount" class="form-label">Monto a tomar</label>
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">transferir</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>